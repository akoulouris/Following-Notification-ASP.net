@model CieTrade.ViewModels.CardFormViewModel
@{
    ViewBag.Title = Model.Heading;
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm(Model.Action, "Card"))
{
    <p class=" alert alert-info">All the fields are <strong>required</strong> </p>

    @Html.HiddenFor(g => g.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" , autofocus = "autofocus" })
        @Html.ValidationMessageFor(m=>m.Description)

    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control", placeholder="eg 1 10 2025" })
        @Html.ValidationMessageFor(m => m.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control", placeholder = "eg 17:28" })
        @Html.ValidationMessageFor(m => m.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Profession)
        @Html.DropDownListFor(m => m.Profession, new SelectList(Model.Professions, "Id", "Name"), "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Profession)
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox"> Check me out
        </label>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}
