
@model  IEnumerable<CieTrade.Models.Card>
@{
    ViewBag.Title = "Mine";
}

<h2>Mine</h2>

<ul class="cards">
    @foreach (var card in Model)
    {
        <li>
            @*@card.DateTime -@card.UserProfessionals.Name*@


            <div class="date">
                <div class="month">
                    @card.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @card.DateTime.ToString("d ")
                </div>
            </div>

            <div class="details">
                <spam class="name">
                    @card.Description
                </spam>
                <span class="proffession">
                    @card.Profession.Name
                </span>
            </div>
            <div class="action">
                <a href="@Url.Action("Edit","Card",new { id = card.Id})">
                    Edit
                </a>
                <a class="js-Cancel-card" data-card-id="@card.Id" href="#">
                    Cancel
                </a>
            </div>

        </li>
    }

</ul>

@section scripts {
    <script>
        $(document).ready(function () {
            $(".js-Cancel-card").click(function (e) {

                bootbox.dialog({
                    title: 'Confirm',
                    message: "Are you sure to want to unfollow this card?",
                    buttons: {
                        no: {
                            label: "No",
                            className: 'btn-default',
                            callback: function () {
                                bootbox.hideAll();
                            }
                        },
                        yes: {
                            label: "yes",
                            className: 'btn-danger',
                            callback: function () {
                                var link = $(e.target);
                                $.ajax({
                                    url: "/api/Card/" + link.attr("data-card-id"),
                                    method: "DELETE"
                                })
                                    .done(function () {
                                        link.parents("li").fadeOut(function () {
                                            $(this).remove();
                                        })
                                    })
                                    .fail(function () {
                                        alert("something failed!!!");
                                    })
                            }
                        }
                    }
                });

                

            })
                        
        });

    </script>
}